# Innochannel SDK Configuration
# Copy this file to .env and configure your values

# =============================================================================
# API Credentials (Required)
# =============================================================================
INNOCHANNEL_API_KEY=your_api_key_here
INNOCHANNEL_API_SECRET=your_api_secret_here

# =============================================================================
# API Endpoints
# =============================================================================
INNOCHANNEL_BASE_URL=https://api.innochannel.com
INNOCHANNEL_WEBHOOK_URL=https://your-domain.com/innochannel/webhooks

# =============================================================================
# Test Configuration (for tests/bootstrap.php)
# =============================================================================
INNOCHANNEL_API_URL=https://api.innochannel.test
INNOCHANNEL_CLIENT_ID=test-client-id
INNOCHANNEL_CLIENT_SECRET=test-client-secret

# =============================================================================
# Request Configuration
# =============================================================================
INNOCHANNEL_TIMEOUT=30
INNOCHANNEL_RETRY_ATTEMPTS=3
INNOCHANNEL_RETRY_DELAY=1000

# =============================================================================
# Logging Configuration
# =============================================================================
INNOCHANNEL_LOGGING_ENABLED=true
INNOCHANNEL_LOG_CHANNEL=daily
INNOCHANNEL_LOG_LEVEL=info
INNOCHANNEL_LOG_REQUESTS=true
INNOCHANNEL_LOG_RESPONSES=false
INNOCHANNEL_LOG_ERRORS=true

# =============================================================================
# Cache Configuration
# =============================================================================
INNOCHANNEL_CACHE_ENABLED=true
INNOCHANNEL_CACHE_STORE=redis
INNOCHANNEL_CACHE_TTL=3600
INNOCHANNEL_CACHE_PREFIX=innochannel

# =============================================================================
# Webhook Configuration
# =============================================================================
INNOCHANNEL_WEBHOOKS_ENABLED=true
INNOCHANNEL_WEBHOOK_SECRET=your_webhook_secret_here
INNOCHANNEL_WEBHOOK_VERIFY_SIGNATURE=true

# =============================================================================
# Rate Limiting
# =============================================================================
INNOCHANNEL_RATE_LIMITING_ENABLED=true
INNOCHANNEL_RATE_LIMIT_RPM=60
INNOCHANNEL_RATE_LIMIT_BURST=10

# =============================================================================
# Service Configuration - RESERVATION
# =============================================================================
INNOCHANNEL_RESERVATION_AUTO_SYNC=true
INNOCHANNEL_RESERVATION_SYNC_DIRECTION=both
INNOCHANNEL_RESERVATION_VALIDATION_STRICT=true

# =============================================================================
# Service Configuration - Property
# =============================================================================
INNOCHANNEL_PROPERTY_AUTO_SYNC=true
INNOCHANNEL_PROPERTY_CACHE_DURATION=7200

# =============================================================================
# Service Configuration - Inventory
# =============================================================================
INNOCHANNEL_INVENTORY_AUTO_SYNC=true
INNOCHANNEL_INVENTORY_SYNC_INTERVAL=300
INNOCHANNEL_INVENTORY_BATCH_SIZE=100

# =============================================================================
# Event Configuration
# =============================================================================
INNOCHANNEL_EVENTS_ENABLED=true
INNOCHANNEL_EVENTS_ASYNC=true
INNOCHANNEL_EVENTS_QUEUE=default

# =============================================================================
# Database Configuration
# =============================================================================
INNOCHANNEL_DB_CONNECTION=default

# =============================================================================
# Development Configuration
# =============================================================================
INNOCHANNEL_DEBUG=false
INNOCHANNEL_MOCK_RESPONSES=false
INNOCHANNEL_TEST_MODE=false

# =============================================================================
# Event System Configuration (Advanced)
# =============================================================================
# RESERVATION Events
INNOCHANNEL_RESERVATION_CREATED_ENABLED=true
INNOCHANNEL_RESERVATION_UPDATED_ENABLED=true
INNOCHANNEL_RESERVATION_CANCELLED_ENABLED=true
INNOCHANNEL_RESERVATION_CONFIRMED_ENABLED=true
INNOCHANNEL_RESERVATION_DELETED_ENABLED=true

# Property Events
INNOCHANNEL_PROPERTY_CREATED_ENABLED=true
INNOCHANNEL_PROPERTY_UPDATED_ENABLED=true
INNOCHANNEL_PROPERTY_ACTIVATED_ENABLED=true
INNOCHANNEL_PROPERTY_DEACTIVATED_ENABLED=true
INNOCHANNEL_PROPERTY_DELETED_ENABLED=true
INNOCHANNEL_PROPERTY_PMS_CREDENTIALS_UPDATED_ENABLED=true

# Rate Plan Events
INNOCHANNEL_RATE_PLAN_CREATED_ENABLED=true
INNOCHANNEL_RATE_PLAN_UPDATED_ENABLED=true
INNOCHANNEL_RATE_PLAN_ACTIVATED_ENABLED=true
INNOCHANNEL_RATE_PLAN_DEACTIVATED_ENABLED=true
INNOCHANNEL_RATE_PLAN_DELETED_ENABLED=true
INNOCHANNEL_RATE_PLAN_RESTRICTIONS_UPDATED_ENABLED=true
INNOCHANNEL_RATE_PLAN_CANCELLATION_POLICY_UPDATED_ENABLED=true

# Room Events
INNOCHANNEL_ROOM_CREATED_ENABLED=true
INNOCHANNEL_ROOM_UPDATED_ENABLED=true
INNOCHANNEL_ROOM_ACTIVATED_ENABLED=true
INNOCHANNEL_ROOM_DEACTIVATED_ENABLED=true
INNOCHANNEL_ROOM_DELETED_ENABLED=true
INNOCHANNEL_ROOM_AMENITIES_UPDATED_ENABLED=true
INNOCHANNEL_ROOM_BED_TYPES_UPDATED_ENABLED=true
INNOCHANNEL_ROOM_CAPACITY_UPDATED_ENABLED=true

# =============================================================================
# Event System Logging
# =============================================================================
INNOCHANNEL_EVENTS_LOGGING_ENABLED=false
INNOCHANNEL_EVENTS_LOG_CHANNEL=default
INNOCHANNEL_EVENTS_LOG_LEVEL=info

# =============================================================================
# Event System Performance
# =============================================================================
INNOCHANNEL_MAX_LISTENERS_PER_EVENT=0
INNOCHANNEL_LISTENER_TIMEOUT=0
INNOCHANNEL_STOP_ON_FAILURE=false

# =============================================================================
# Event System Debug
# =============================================================================
INNOCHANNEL_EVENTS_DEBUG=false
INNOCHANNEL_EVENTS_COLLECT_STATS=false