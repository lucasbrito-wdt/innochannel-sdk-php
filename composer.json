{
  "name": "lucasbrito-wdt/innochannel-sdk",
  "description": "SDK oficial do Innochannel para integração com sistemas de gestão hoteleira (PMS) e canais de distribuição (OTAs)",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Innochannel Team",
      "email": "dev@innochannel.com",
      "homepage": "https://innochannel.com",
      "role": "Developer"
    }
  ],
  "keywords": [
    "innochannel",
    "hotel",
    "pms",
    "ota",
    "channel-manager",
    "booking",
    "reservation",
    "hospitality",
    "tourism",
    "api-client",
    "php",
    "laravel"
  ],
  "homepage": "https://github.com/lucasbrito-wdt/innochannel-sdk",
  "support": {
    "issues": "https://github.com/lucasbrito-wdt/innochannel-sdk/issues",
    "source": "https://github.com/lucasbrito-wdt/innochannel-sdk",
    "docs": "https://github.com/lucasbrito-wdt/innochannel-sdk/blob/main/README.md",
    "email": "support@innochannel.com"
  },
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.0",
    "firebase/php-jwt": "^6.0",
    "nesbot/carbon": "^2.0|^3.0"
  },
  "suggest": {
    "laravel/framework": "^8.0|^9.0|^10.0|^11.0|^12.0 for Laravel integration"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.4",
    "phpstan/phpstan": "^1.0",
    "phpunit/phpunit": "^10.5",
    "squizlabs/php_codesniffer": "^3.6",
    "symfony/var-dumper": "^5.0|^6.0"
  },
  "autoload": {
    "psr-4": {
      "Innochannel\\Sdk\\": "src/",
      "Innochannel\\Laravel\\": "src/Laravel/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src --level=8",
    "cs-check": "phpcs src tests --standard=PSR12",
    "cs-fix": "phpcbf src tests --standard=PSR12",
    "php-cs-fixer": "php-cs-fixer fix",
    "quality": [
      "@phpstan",
      "@cs-check",
      "@test"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/innochannel"
    },
    {
      "type": "custom",
      "url": "https://innochannel.com/support"
    }
  ],
  "extra": {
    "laravel": {
      "providers": [
        "Innochannel\\Laravel\\InnochannelServiceProvider"
      ],
      "aliases": {
        "Innochannel": "Innochannel\\Laravel\\Facades\\Innochannel",
        "InnochannelBooking": "Innochannel\\Laravel\\Facades\\InnochannelBooking",
        "InnochannelProperty": "Innochannel\\Laravel\\Facades\\InnochannelProperty",
        "InnochannelInventory": "Innochannel\\Laravel\\Facades\\InnochannelInventory"
      }
    }
  }
}
